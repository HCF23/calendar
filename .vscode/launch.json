    "version": "0.2.0",
    "configurations": [
    {
        "name": "(gdb) Bash on Windows Launch",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/my_cal_debug.exe",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,
        "pipeTransport": {
            "debuggerPath": "\tools\cygwin64\bin\gdb.exe",
            "pipeProgram": "${env:windir}\\system32\\bash.exe",
            "pipeArgs": ["-c"],
            "pipeCwd": ""
        },
        "setupCommands": [
            {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
            }
        ]
    },
    ]
}